<h1> Новая петиция </h1>

<%= form_for :petition, url: petitions_path do |f| %>
    <p>
      <%= f.label :Название %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :Описание %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit 'Создать', :name => 'submit' %>
    </p>
<% end %>
